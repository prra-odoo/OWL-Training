<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="owl_playground.Todo" owl="1">
        <ul class="list-group mt-2">
            <li class="list-group-item d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center justify-content-between gap-3">
                    <input class="form-check-input" type="checkbox" t-on-click="() => props.toggleState(props.id)"></input>
                    <div class="d-flex justify-content-start align-items-center gap-1" t-att-class="props.done ? 'text-muted text-decoration-line-through' : ''">
                        <div style="font-weight: bold"><t t-out="props.id"/></div>
                        <div><t t-out="props.description"/></div>
                    </div>
                </div>                
                <span class="fa fa-remove ms-1" t-on-click="() => props.removeTodo(props.id)" style="color: red; cursor: pointer;"/>
            </li>
        </ul>
    </t>
</templates>