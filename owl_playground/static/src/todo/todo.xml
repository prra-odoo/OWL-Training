<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <div class="d-flex justify-content-between">
            <div t-att-class="props.done ? 'text-decoration-line-through text-muted' : ''">
                <t t-esc="props.id"/> - 
                <t t-esc="props.desc"/>
            </div>
            <div>      
                <span role="button" class="fa ms-3 text-success" t-att-class="props.done ? 'fa fa-check-square-o' : 'fa fa-square-o'" t-on-click="ev => props.togglestate(props.id)"/>
                <span role="button" class="fa fa-trash ms-3 text-danger" t-on-click="ev => props.removetodo(props.id)"/>
            </div>
        </div>
    </t>
</templates>
