<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
  <t t-name="owl_playground.Todo" owl="1">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="props.id" t-att-checked="props.done" t-on-click="(e)=>props.toggleState(this.props.id)"/>
            <label class="form-check-label" t-att-for="props.id" t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="props.id"/>.
                <t t-esc="props.description"/>
            </label>
            <span role="button" class="fa fa-remove ms-3 text-danger" t-on-click="(e)=>props.removeTodo(props.id)"/>
        </div>
 </t>
</template>