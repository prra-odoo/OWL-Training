<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <div class="p-3">
            <input class="form-check-input" type="checkbox" t-att-id="props.id" t-att-checked="props.done" t-on-click="ev => props.toggleState(props.id)"/>
            <label t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
                <t t-esc="props.id"/>.
                <t t-esc="props.description"/>
            </label>
            <span class="fa fa-remove text-danger" t-att-id="props.id" t-on-click="ev => props.removeTodo(props.id)"/>
        </div>
    </t>
</templates>