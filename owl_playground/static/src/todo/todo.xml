<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="owl_playground.Todo" owl="1">
        <center>
            <p t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
                <input type="checkbox" t-att-checked="props.done" t-on-click="ev => props.toggleState(props.id)"/>
                <t t-esc="props.id"/>.        
                <t t-esc="props.description"/>
                <span class="fa fa-remove ms-3 text-danger" t-on-click="ev => props.removeTodo(props.id)"/>
            </p>
        </center>
    </t>    
</templates>
