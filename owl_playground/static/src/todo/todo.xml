<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
    <div>

    <div class="d-flex">

    <input type="checkbox" t-on-click="(ev)=>props.toggleState(props.id)" />
    

    <p t-att-class=" props.done ? 'text-decoration-line-through text-muted' : 'text-success' ">
    
    <t t-esc="props.id"/>.<t t-esc="props.description"/>
    <span  class="fa fa-remove" t-on-click="(ev)=>props.removeTodo(props.id)"  />

    </p>
    </div>

    

    

    </div>
    </t>
</template>