<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <!-- <p t-att-class="props.done ? 'text-decoration-line-through text-muted' : '' ">
            <t t-esc="props.id"/>.
            <t t-esc="props.description"/>
        </p> -->
         <div class="form-check">
            <input class="form-check-input" type="checkbox" t-att-id="props.id" t-att-checked="props.done" t-on-click="() => props.toggleState(props.id)"/>
                <t t-esc="props.id"/>.
                <t t-esc="props.description"/>
            <span role="button" class="fa fa-remove ms-3 text-danger" t-on-click="() => props.removeTodo(props.id)"/>
        </div>
    </t>
</templates>