<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todolist" owl="1">
        <div>
            <input type="text" placeholder="Add a Todo" t-on-keyup="addTodo" t-ref="input" style="margin: 10px"/>
            <t t-foreach="TodoList" t-as="todo" t-key="todo.id">
                <Todo id="todo.id" description="todo.description" done="todo.done" toggleState.bind="toggle" remove.bind="removeTodo"/>
            </t>
        </div>
    </t>

</templates>
