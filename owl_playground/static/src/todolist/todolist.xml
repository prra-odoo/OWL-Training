<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todolist" owl="1">
            <input class="mb-2 d-block" type="text" placeholder="Add your todo" t-on-keyup="addTodo" t-ref="input"/>
            <t t-foreach="todolist" t-as="todo" t-key="todo.id">
                <Todo id="todo.id" description="todo.description" done="todo.done" togglestate.bind="toggle" removetodo.bind="removeid"/>
                <br/>
            </t>
    </t>

</templates>
