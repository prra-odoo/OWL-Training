<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
	<t t-name="owl_playground.todolist" owl="1">
		<div class="bg-white border">
            <input type="text" placeholder="Enter a new task" t-on-keyup="addTodoList" t-ref="input_facuse"/>
            <t t-foreach="todoList" t-as="todo" t-key="todo.id">
                <Todo id="todo.id" description="todo.description" done="todo.done" toggelState.bind="toggleTodo" removeTodo.bind="removeTodo"/>
            </t>
        </div>
    </t>
</templates>