<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">

    <t t-name="owl_playground.counter" owl="1">
        <p>Counter: <t t-esc="state.value"/></p>
        <div> 
            <button class="btn btn-primary" t-on-click="increment">
                Increment ⬆
            </button>
        </div>
        <div>
            <button class="btn btn-danger mt-2" t-on-click="decrement">
                Decrement ⬇
            </button>
        </div>
    </t>

</templates>