<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="owl_playground.todoList" owl="1">
        <input t-ref="input" id="buttonid" class="form-control mb-3" type="text" placeholder="Add a todo" t-on-keyup="addTodo"/>
        <button class="btn btn-primary"  t-on-click="() => this.add()">Add</button>
        <t t-foreach="todo" t-as="todos" t-key="todos.id">
            <Todo id="todos.id" description="todos.description" done="todos.done" toggleState.bind="toggleTodo" removeTodo.bind="remove"/>
        </t>
    </t>

</templates>