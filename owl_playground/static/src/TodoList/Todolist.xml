<?xml version="1.0" encoding="UTF-8"?>

 <!--  -->
    <template xml:space="preserve">
    <t t-name="owl_playground.Todolist" owl="1">
    <div>
        <div><input id="todoinput" type="text" class="form-control" placeholder="Enter a new task"  t-on-keyup="(event)=>this.addTodo(event)"  t-ref="input" ></input></div>
        <div>
        <div class="mt-4">
        
          <t t-foreach="todos" t-as="todo" t-key="todo.id">
                <Todo id="todo.id" description="todo.description" done="todo.done" toggleState.bind="toggleState" removeTodo.bind="removeTodo"/>
        </t>
        </div>
        </div> 
    </div>
    </t>
</template>