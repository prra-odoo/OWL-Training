<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
<t t-name="owl_playground.Card" owl="1">
    <div class="col-md-4 p-3 bg-light rounded border">
   
      <div class="card">
        <h4 class="card-header">
          Card Component
        </h4>
        <div class="card-body">
        <t t-if="props.slots.title">
            <h5><t t-slot="title">
            </t></h5>
            <p><t t-slot="content"></t></p>
        </t>
        <t t-else="props.slots.default"><h3>Default value !!!</h3>
        <t t-slot="default">
        </t></t>
        </div>
      </div>
    </div>
</t>
</template>