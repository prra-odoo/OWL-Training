<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="owl_playground.playground" owl="1">
<!-- Counter Component -->
        <div class="container">
            <div class="row">
                <div class="col-md-4 p-3 bg-light rounded border">
                    <div class="mb-3 mt-3">
                        <h4>Counter Component</h4>
                    </div>
                    <div class="col-6">
                        <Counter/>
                        <p class="fw-bold mt-3">Hello World ! \n Click's Me!!</p>
                        <!-- 
                        <p class="mt-3">Counter: <t t-esc="state.value"/></p>
                        <button class="btn btn-primary" t-on-click="increment">Increment</button>
                        -->
                    </div>
                </div>
<!-- Card Component  -->
            <Card>
                <t t-set-slot="title">My Card</t>
                <t t-set-slot="content">Some quick example text...</t>
            </Card>

<!-- Todo list Component  -->
                <div class="col-md-4 border p-3 bg-light rounded">
                    <div>
                        <div class="mb-3 mt-3">
                            <h4>To-Do List Component</h4>
                        </div>
                        <div class="mb-3">
                        <Todolist />
                        </div>
                        
                        <!-- 
                        <t t-foreach="todos" t-as="todo" t-key="todo.id">
                            <Todo id="todo.id" description="todo.description" done="todo.done" />
                        </t>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
