<?xml version="1.0" encoding="UTF-8"?>
<template xml:space="preserve">
    <t t-name="awesome_tshirt.Card" owl="1">
        <div class="card mx-3 my-3">
                <div class="card-body">
                    <t t-if="props.slots.title">
                        <h5 class="card-title">
                            <t t-slot="title"/>
                        </h5>
                    </t>
                    <p class="card-text">
                        <t t-slot="content"/>
                    </p>
                    <!-- <t t-slot="default"/> -->
                </div>
        </div>
    </t>
</template>