<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <Layout display="display">
            <t t-set-slot="control-panel-bottom-left">
                <button class="btn btn-primary" t-on-click="openCustomerView"> Customers </button>
                <button t-on-click="openOrders" type="button" class="btn btn-primary" title="New Orders">New Orders</button>
                <button t-on-click="cancelledOrders" type="button" class="btn btn-primary" title="Cancelled Orders">Cancelled Orders</button>
            </t>
        </Layout>

        <div class="h-100 o_awesome_tshirt_dashboard">
            <div class="d-flex m-3">
                <t t-foreach="cardtitle" t-as="key" t-key="key">
                    <Card>
                        <t t-set-slot="title">
                            <t t-esc="cardtitle[key]"/>
                        </t>
                            <t t-esc="statistics[key]"/>
                    </Card>
                </t>
            </div>
            <div>
                    <Card>
                        <t t-set-slot="title">Shirt Orders by Size</t>
                        <PieChart data="statistics['orders_by_size']" sizeby.bind="openSizeOrders"/>
                    </Card>
            </div>
        </div>
    </t>

</templates>
