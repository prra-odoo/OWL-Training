<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }">
            <t t-set-slot="control-panel-bottom-left">
                <button class="btn btn-outline-primary" t-on-click="openCustomers">Customers</button>
                <button class="btn btn-outline-primary" t-on-click="newOrders">New Orders</button>
                <button class="btn btn-outline-primary" t-on-click="cancelledOrders">Cancelled Orders</button>
            </t>
        </Layout>
        <div class="h-100 awesome_tshirt_dashboard">

            <div class="d-flex flex-nowrap mt-2">
                <div t-foreach="keyvalue" t-as="key" t-key="key">
                    <Card>
                        <t t-set-slot="title"><t t-esc="keyvalue[key]"/></t>
                        <t t-esc="result[key]"/>
                    </Card>
                </div>
            </div>

            <div class = "m-3 w-25">
                <Card>
                    <PieChart data="result['orders_by_size']" label="'Shirt orders by size'" onPieClick.bind="openFilteredBySizeOrders"/>
                </Card>
            </div>  
        
        </div>  
    </t>
</templates>
