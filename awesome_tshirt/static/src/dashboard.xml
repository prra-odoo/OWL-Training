<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <Layout display="display">
            <t t-set-slot="control-panel-bottom-left">
                <!-- Hello owl -->
                <button class="btn-primary" t-on-click="forCustomer"> Customers </button>
                <button class="btn-primary" t-on-click="last7DaysOrders"> New Orders </button>
                <button class="btn-primary" t-on-click="last7DaysCancelledOrders"> Cancelled Orders </button>
            </t>
        </Layout>
        <div class="h-100 o_awesome_tshirt_dashboard">
            <div class="d-flex flex-nowrap">
            <div t-foreach="keyValue" t-as="key" t-key="key" class="m-2">
                <Card>
                    <t t-set-slot="string"><t t-esc="keyValue[key]"/></t>
                    <p class="card-text"><t t-esc="statistics[key]"/></p>
                </Card>   
            </div>      
        </div>
            <div class="m-3">
                <Card className="'w-25'">
                    <t t-set-slot="string">Shirt orders by size</t>
                    <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'" onPieClick.bind="openOrder"/>
                </Card>
            </div>
        </div>      
    </t>
</templates>