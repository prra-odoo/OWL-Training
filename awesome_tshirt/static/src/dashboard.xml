<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <!-- layout component is used for display of control panel (ex-1) -->
        <Layout display="display">
            <t t-set-slot="control-panel-bottom-left">
                <button class="btn btn-primary" t-on-click="openCustomerView"> Customers </button>
                <button class="btn btn-primary" t-on-click="openOldOrders"> New Orders </button>
                <button class="btn btn-primary" t-on-click="openCancelledOrders"> Cancelled Orders </button>
            </t>
        </Layout>
        <!-- body -->
        <div class="h-100 o_awesome_tshirt_dashboard">
            <div class="d-flex flex-wrap">
                <!-- loop is iterating for each card (ex-2)-->
                <t t-foreach="keytitle" t-as="key" t-key="key">
                    <Card>
                        <t t-set-slot = "title">
                            <t t-esc="keytitle[key]"/>
                        </t>
                        <t t-esc="response[key]"/>
                    </Card>
                 </t>
            </div>
            <!-- this card is particular for pie chart -->
            <Card>
                <PieChart data="response['orders_by_size']" label="'TShirt by size'" onPieClick.bind="openSizeOrders"></PieChart>
            </Card>
        </div>
    </t>

</templates>
