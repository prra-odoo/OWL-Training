<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }">
            <t t-set-slot="control-panel-bottom-left">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-primary" t-on-click="openNewOrders">New Orders</button>
                <button class="btn btn-primary" t-on-click="openCancelledOrders">Cancelled Orders</button>
            </t>

            <div class="o_awesome_tshirt_dashboard vh-100">
                <div class="d-flex flex-nowrap">
                    <div t-foreach="title" t-as="key" t-key="key" class="m-2">
                        <Card>
                            <t t-set-slot="title"><t t-esc="title[key]"/></t>
                            <p class="card-text"><t t-esc="statistics[key]"/></p>
                        </Card>   
                    </div>      
                </div>

                <div class="m-3">
                    <Card className="'w-25'">
                        <t t-set-slot="title">Shirt orders by size</t>
                        <PieChart data="statistics['orders_by_size']" label="'Shirt orders by size'" onPieClick.bind="openOrders"/>
                    </Card>
                </div>
            <div>
        </Layout>
    </t>

</templates>
