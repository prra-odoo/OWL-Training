<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <div class="h-100 dashboard_full">
            <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }">
                <t t-set-slot="control-panel-bottom-left">
                    <button t-on-click="openResUser" type="button" class="btn btn-primary" title="Sellers">Sellers</button>
                    <button t-on-click="openResPartner" type="button" class="btn btn-primary" title="Customers">Customers</button>
                    <button t-on-click="openOrders" type="button" class="btn btn-primary" title="New Orders">New Orders</button>
                    <button t-on-click="cancelledOrders" type="button" class="btn btn-primary" title="Cancelled Orders">Cancelled Orders</button>
                </t>
            </Layout>
            <div class="row">
                <t t-foreach="statistics" t-key="data" t-as="data">
                    <Card>
                        <t t-set-slot="title" t-esc="statistics[data]"/>
                        <t t-esc="result[data]"/>
                    </Card>
                </t>
            </div>
            <div>
                <Card className="'w-25'">
                    <t t-set-slot="title">Shirt Orders by Size</t>
                    <PieChart data="result['orders_by_size']" sizeby.bind="openSizeOrders"/>
                </Card>
            </div>
        </div>
    </t>

</templates>
