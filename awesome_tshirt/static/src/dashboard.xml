<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_tshirt.clientaction" owl="1">
        <Layout display="{ controlPanel: { 'top-right' : false, 'bottom-right': false } }">
            <t t-set-slot="control-panel-bottom-left">
                <button type="button" class="btn btn-primary" t-on-click="openCustomerView">CUTOMERS</button>
                <button type="button" class="btn btn-primary" t-on-click="openCreateLast7Day">NEW ORDERS</button>
                <button type="button" class="btn btn-primary" t-on-click="openCancellLast7Day">CANCELL ORDER</button>
            </t>
        </Layout>

        <t t-name="awesome_tshirt.cart" owl="1">
            <div class="h-100 o_awesome_dashboard">
                <div class="d-flex flex-nowrap">
                    <div t-foreach="orderValue" t-as="key" t-key="key" class="m-2">
                        <Card>
                            <t t-set-slot="title"><t t-esc="orderValue[key]"/></t>
                            <p class="card-text"><t t-esc="order[key]"/></p>
                        </Card>
                    </div>      
                </div>
                <Card>
                    <t t-set-slot="title">Shirt orders by size</t>
                    <PieChart data="order['orders_by_size']" label="'Shirt orders by size'" onPieClick.bind="openSizeOrders"/>
                </Card>
            </div>
        </t>
    </t>
</templates>
