<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">

    <t t-name="awesome_tshirt.Card" owl="1">
        <div class="card" style="width: 25rem; height:10rem;" t-att-class="props.className">
            <div class="card-body">
                <t t-if="props.slots.string"> 
                    <h5 class="card-string"><t t-slot="string"/></h5>
                </t>
                <p class="card-text"><t t-slot="default"/></p>
            </div>
        </div>
    </t>
</templates>    